<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                            android:startColor="@color/MapButtonShadeStartColor"
                            android:endColor="@color/MapButtonShadeEndColor"
                            android:angle="225"/>
                    <corners android:radius="2dp"/>
                </shape>
            </item>

            <item android:bottom="1.8dp"
                  android:left="1.8dp"
                  android:right="1.3dp"
                  android:top="1.3dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/MapDefaultButtonColor"/>
                    <corners android:radius="2dp"/>
                </shape>
            </item>

        </layer-list>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                            android:startColor="@color/MapButtonShadeStartColor"
                            android:endColor="@color/MapButtonShadeEndColor"
                            android:angle="225"/>
                    <corners android:radius="2dp"/>
                </shape>
            </item>
            <item android:bottom="1.8dp"
                  android:left="1.8dp"
                  android:right="1.3dp"
                  android:top="1.3dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/MapPressedButtonColor"/>
                    <corners android:radius="2dp"/>
                </shape>
            </item>

        </layer-list>
    </item>
</selector>