<?xml version="1.0" encoding="utf-8"?>
<font-family xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             tools:ignore="UnusedAttribute">

    <!-- AppCompat Support Library 26+ requires both android: and app: to be declared -->
    <!-- https://developer.android.com/guide/topics/ui/look-and-feel/fonts-in-xml.html#using-support-lib -->

    <font android:fontStyle="normal"
          android:fontWeight="400"
          android:font="@font/gotham"
          app:fontStyle="normal"
          app:fontWeight="400"
          app:font="@font/gotham"/>

    <font android:fontStyle="italic"
          android:fontWeight="400"
          android:font="@font/gotham_book_italic"
          app:fontStyle="italic"
          app:fontWeight="400"
          app:font="@font/gotham_italic" />

    <font android:fontStyle="normal"
          android:fontWeight="700"
          android:font="@font/gotham_bold"
          app:fontStyle="normal"
          app:fontWeight="700"
          app:font="@font/gotham_bold" />
</font-family>